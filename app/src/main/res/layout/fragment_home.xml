<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:src="@drawable/doctor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Medical Rays"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/appColor"
            android:textSize="24sp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:src="@drawable/flower2"/>


    </LinearLayout>


    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="@color/appColor"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/chest"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="95dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/xray"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest X-Rays"
                android:layout_gravity="center"
                android:textColor="@color/appColor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/brain"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="95dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/brain"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brain Tumor"
                android:layout_gravity="center"
                android:textColor="#C44AF1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/skin"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="95dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:src="@drawable/skin"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skin Cancer"
                android:layout_gravity="center"
                android:textColor="@color/red"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cancer"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="95dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/heart_model"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart"
                android:layout_gravity="center"
                android:textColor="#CFC503"/>

        </LinearLayout>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewPagerImageSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/toolbar_co"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />




</LinearLayout>